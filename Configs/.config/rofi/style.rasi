@import "colors.rasi"

* {
    background-color: transparent;
    text-color: gray;
}

window {
    background-color: @background;
    // width: 780px;
    width: 480px;
    height: 680px;
    border: 2px;
    border-radius: 8px;
    border-color: @foreground;
    orientation: horizontal;
    // children: [dummy, mainbox];
    children: [mainbox];
}

